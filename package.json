{
  "name": "pegasus-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node node_modules/.bin/next dev",
    "dev:next": "next dev",
    "build": "node node_modules/.bin/next build",
    "start": "node node_modules/.bin/next start",
    "lint": "next lint",
    "type-check": "npx tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "prepare": "husky install",
    "db:init": "tsx scripts/init-db.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop",
    "db:pull": "drizzle-kit introspect:pg",
    "db:check": "drizzle-kit check:pg",
    "db:health": "curl http://localhost:3000/api/health/db"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.10.0",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "bcryptjs": "^2.4.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.4",
    "isomorphic-dompurify": "^2.12.0",
    "lucide-react": "^0.537.0",
    "next": "^14.2.31",
    "next-auth": "^4.24.11",
    "postgres": "^3.4.7",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^14.2.31",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^14.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.29.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.31",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "jsdom": "^24.1.3",
    "lint-staged": "^15.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.7.2",
    "vitest": "^1.6.0"
  }
}
